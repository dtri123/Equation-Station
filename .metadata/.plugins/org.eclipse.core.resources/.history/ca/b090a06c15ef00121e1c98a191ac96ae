package com.example.theequationstation;

public class Equations {
	
	public double convertToDouble(String txt){
		double number = 0;
		if( !(txt.equals(""))) number = Double.parseDouble(txt);
		return number;
	}
	
	public double add(double a, double b, double sum, boolean find_A, boolean find_B, boolean find_Sum ){
		if( find_A ) return sum - b;
		else if( find_B ) return sum - a;
		else if( find_Sum ) return a + b;
		else return 0;
	}
	
	public double subtract(double bigger, double lesser, double diff, boolean find_Bigger, boolean find_Lesser, boolean find_Diff){
		if( find_Bigger ) return diff+lesser;
		else if( find_Lesser ) return bigger-diff;
		else if( find_Diff ) return bigger-lesser;
		else return 0;
	}
	
	public double multiply(double a, double b, double product){
		if( a != 0 && b != 0 ) return a*b;
		else if( a != 0 && product != 0 ) return product/a;
		else if( b != 0 && product != 0 ) return product/b;
		else return 0;
	}
	
	public double divide(double a, double b, double dividend){
		if( a != 0 && b != 0 ) return a/b;
		else if( a != 0 && dividend != 0 ) return a*dividend;
		else if( b != 0 && dividend != 0 ) return b*dividend;
		else return 0;
	}
}
